{
    "manifest_version": 2,
    "name": "Chrome Extension Boilerplate",
    "version": "1.0.0",
    "icons": {
        "128": "icon_128.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icons": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}